<resources>

    <style name="CheftasticTheme" parent="@style/Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/CheftasticActionBar</item>
        <item name="android:actionBarTabTextStyle">@style/TabTextStyle</item>
        <item name="actionBarStyle">@style/CheftasticActionBar</item>
        <item name="actionBarTabTextStyle">@style/TabTextStyle</item>
    </style>

    <style name="CheftasticActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:titleTextStyle">@style/TitleTextStyle</item>
        <item name="android:background">@drawable/ab_background</item>
        <item name="titleTextStyle">@style/TitleTextStyle</item>
        <item name="background">@drawable/ab_background</item>
    </style>

    <style name="TitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="TabTextStyle" parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">#00664d</item>
    </style>

    <style name="CheftasticActionBarTabs" parent="Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/ab_tabs</item>

        <item name="background">@drawable/ab_tabs</item>
    </style>

    <style name="CheftasticTheme.SplashScreen">
        <item name="android:windowActionBar">false</item>
        <item name="android:background">@color/gray_darkest</item>
        <item name="windowActionBar">false</item>
        <item name="background">@color/gray_darkest</item>
    </style>

    <style name="TextBox">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@color/almost_black</item>
    </style>

    <style name="TextBox.Yellow">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/h_yellow</item>
    </style>

    <style name="TextBox.Blue">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/h_blue</item>
    </style>

    <style name="TextBox.Purple">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/h_purple</item>
    </style>

    <style name="TextBox.Orange">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/h_orange</item>
    </style>

    <style name="TextBox.Red">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/h_red</item>
    </style>

    <style name="TextBox.Pink">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/h_pink</item>
    </style>

    <style name="TextBox.Green">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/h_green</item>
    </style>

    <style name="RatingBar" parent="@android:style/Widget.RatingBar" />

    <style name="RatingBar.Small" />

    <style name="RatingBar.Small.Dark">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/rating_bar_small_dark</item>
        <item name="android:indeterminateDrawable">@drawable/rating_bar_small_dark</item>
        <item name="android:minHeight">24dip</item>
        <item name="android:maxHeight">24dip</item>
        <item name="android:thumb">@null</item>
    </style>

    <style name="NumberPickerUpButton" parent="@android:style/Widget.ImageButton">
        <item name="android:background">@drawable/number_picker_up_btn</item>
        <item name="android:paddingTop">22dip</item>
        <item name="android:paddingBottom">22dip</item>
    </style>

    <style name="NumberPickerDownButton" parent="@android:style/Widget.ImageButton">
        <item name="android:background">@drawable/number_picker_down_btn</item>
        <item name="android:paddingTop">22dip</item>
        <item name="android:paddingBottom">22dip</item>
    </style>

    <style name="NumberPickerInputText" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textAppearance">@style/NumberPickerInputText</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/number_picker_input</item>
    </style>

    <style name="TextAppearanceDayView">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="TextAppearanceDayView.Large">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TextAppearanceDayView.Medium">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearanceDayView.Small">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="TextViewMenuRecipe">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextViewMenuRecipe.RecipeSelected">
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="TextViewMenuRecipe.RecipeSelected.Selected">
        <item name="android:textColor">@color/gray_dark</item>
    </style>

    <style name="TextViewMenuRecipe.RecipeSelected.PreviousDay">
        <item name="android:textColor">@color/gray_slightly_dark</item>
    </style>

    <style name="TextViewMenuRecipe.NoSelected">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/gray_slightly_dark</item>
    </style>
</resources>
