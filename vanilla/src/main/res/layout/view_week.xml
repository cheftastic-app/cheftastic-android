<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/widget_week_height"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:divider="@drawable/horizontal_divider"
        android:dividerPadding="@dimen/margin_regular"
        android:orientation="horizontal"
        android:showDividers="middle">

        <app.cheftastic.vanilla.widgets.week.DayView
            android:id="@+id/item_week_day_1"
            android:layout_width="@dimen/view_day_width"
            android:layout_height="@dimen/view_day_height" />

        <app.cheftastic.vanilla.widgets.week.DayView
            android:id="@+id/item_week_day_2"
            android:layout_width="@dimen/view_day_width"
            android:layout_height="@dimen/view_day_height" />

        <app.cheftastic.vanilla.widgets.week.DayView
            android:id="@+id/item_week_day_3"
            android:layout_width="@dimen/view_day_width"
            android:layout_height="@dimen/view_day_height" />

        <app.cheftastic.vanilla.widgets.week.DayView
            android:id="@+id/item_week_day_4"
            android:layout_width="@dimen/view_day_width"
            android:layout_height="@dimen/view_day_height" />

        <app.cheftastic.vanilla.widgets.week.DayView
            android:id="@+id/item_week_day_5"
            android:layout_width="@dimen/view_day_width"
            android:layout_height="@dimen/view_day_height" />

        <app.cheftastic.vanilla.widgets.week.DayView
            android:id="@+id/item_week_day_6"
            android:layout_width="@dimen/view_day_width"
            android:layout_height="@dimen/view_day_height" />

        <app.cheftastic.vanilla.widgets.week.DayView
            android:id="@+id/item_week_day_7"
            android:layout_width="@dimen/view_day_width"
            android:layout_height="@dimen/view_day_height" />
    </LinearLayout>
</FrameLayout>