<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_nutritional_info_summary_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:minWidth="300dp">

    <ProgressBar
        android:id="@+id/view_nutritional_info_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <LinearLayout
        android:id="@+id/view_nutritional_info_summary_container_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_view_nutritional_info_summary"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_small"
            android:layout_weight="1">

            <app.cheftastic.vanilla.widgets.CircularGraph
                android:id="@+id/view_nutritional_info_summary_graph"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:clickable="true"
                android:minWidth="300dp" />

            <TextView
                android:id="@+id/view_nutritional_info_percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/fifty_percent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/red_dark" />

            <ProgressBar
                android:id="@+id/view_nutritional_info_summary_secondary_progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginLeft="@dimen/margin_regular"
            android:layout_marginRight="@dimen/margin_regular"
            android:layout_weight="0"
            android:background="@drawable/card">

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_regular">

                <TableRow
                    android:layout_marginBottom="@dimen/margin_small"
                    android:layout_marginTop="@dimen/margin_small">

                    <TextView
                        android:id="@+id/view_nutritional_info_summary_group_1_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="@string/name"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/blue_dark" />

                    <TextView
                        android:id="@+id/view_nutritional_info_summary_group_1_percentage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/margin_regular"
                        android:layout_marginRight="@dimen/margin_small"
                        android:text="@string/fifty_percent"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/black"
                        android:textSize="@dimen/view_nutritional_info_summary_percentage" />

                    <TextView
                        android:id="@+id/view_nutritional_info_summary_group_1_deviation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/fifty_percent"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textSize="@dimen/view_nutritional_info_summary_deviation" />
                </TableRow>

                <TableRow android:layout_marginBottom="@dimen/margin_small">

                    <TextView
                        android:id="@+id/view_nutritional_info_summary_group_2_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="@string/name"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/purple_dark" />

                    <TextView
                        android:id="@+id/view_nutritional_info_summary_group_2_percentage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/margin_regular"
                        android:layout_marginRight="@dimen/margin_small"
                        android:text="@string/fifty_percent"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/black"
                        android:textSize="@dimen/view_nutritional_info_summary_percentage" />

                    <TextView
                        android:id="@+id/view_nutritional_info_summary_group_2_deviation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/fifty_percent"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textSize="@dimen/view_nutritional_info_summary_deviation" />
                </TableRow>

                <TableRow android:layout_marginBottom="@dimen/margin_small">

                    <TextView
                        android:id="@+id/view_nutritional_info_summary_group_3_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="@string/name"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/green_dark" />

                    <TextView
                        android:id="@+id/view_nutritional_info_summary_group_3_percentage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/margin_regular"
                        android:layout_marginRight="@dimen/margin_small"
                        android:text="@string/fifty_percent"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/black"
                        android:textSize="@dimen/view_nutritional_info_summary_percentage" />

                    <TextView
                        android:id="@+id/view_nutritional_info_summary_group_3_deviation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/fifty_percent"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textSize="@dimen/view_nutritional_info_summary_deviation" />
                </TableRow>

                <TableRow android:layout_marginBottom="@dimen/margin_small">

                    <TextView
                        android:id="@+id/view_nutritional_info_summary_group_4_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="@string/name"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/orange_dark" />

                    <TextView
                        android:id="@+id/view_nutritional_info_summary_group_4_percentage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/margin_regular"
                        android:layout_marginRight="@dimen/margin_small"
                        android:text="@string/fifty_percent"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/black"
                        android:textSize="@dimen/view_nutritional_info_summary_percentage" />

                    <TextView
                        android:id="@+id/view_nutritional_info_summary_group_4_deviation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/fifty_percent"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textSize="@dimen/view_nutritional_info_summary_deviation" />
                </TableRow>

                <TableRow android:layout_marginBottom="@dimen/margin_small">

                    <TextView
                        android:id="@+id/view_nutritional_info_summary_group_5_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="@string/name"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/emerald_dark" />

                    <TextView
                        android:id="@+id/view_nutritional_info_summary_group_5_percentage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/margin_regular"
                        android:layout_marginRight="@dimen/margin_small"
                        android:text="@string/fifty_percent"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/black"
                        android:textSize="@dimen/view_nutritional_info_summary_percentage" />

                    <TextView
                        android:id="@+id/view_nutritional_info_summary_group_5_deviation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/fifty_percent"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textSize="@dimen/view_nutritional_info_summary_deviation" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/view_nutritional_info_summary_group_6_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="@string/name"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/red_dark" />

                    <TextView
                        android:id="@+id/view_nutritional_info_summary_group_6_percentage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/margin_regular"
                        android:layout_marginRight="@dimen/margin_small"
                        android:text="@string/fifty_percent"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/black"
                        android:textSize="@dimen/view_nutritional_info_summary_percentage" />

                    <TextView
                        android:id="@+id/view_nutritional_info_summary_group_6_deviation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/fifty_percent"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textSize="@dimen/view_nutritional_info_summary_deviation" />
                </TableRow>
            </TableLayout>
        </FrameLayout>
    </LinearLayout>
</FrameLayout>